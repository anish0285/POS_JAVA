<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane onMouseClicked="#itemClick" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="130.0" prefWidth="130.0" style="-fx-border-color: black; -fx-border-radius: 2; -fx-background-color: #fff;">
         <top>
            <ImageView fx:id="itemImg" fitHeight="95.0" fitWidth="95.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
         </top>
         <bottom>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#itemClick" prefHeight="33.0" prefWidth="127.0" style="-fx-border-color: black; -fx-border-width: 1 0 0 0; -fx-background-color: #dbe9ee; -fx-border-radius: 0 0 2 2;" BorderPane.alignment="CENTER">
               <children>
                  <Text fx:id="itemName" strokeType="OUTSIDE" strokeWidth="0.0" text="Name">
                     <font>
                        <Font name="Arial Black" size="11.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="5.0" />
                     </VBox.margin>
                  </Text>
                  <Text fx:id="itemPrice" strokeType="OUTSIDE" strokeWidth="0.0" text="Price">
                     <font>
                        <Font name="Arial" size="10.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="5.0" />
                     </VBox.margin>
                  </Text>
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</Pane>
